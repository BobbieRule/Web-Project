extends layout 

block navbar 
    include ./partials/navbar

block content
    if error
        .alert.alert-danger(role="alert")
            span=error

    .container 
        .row.d-flex.align-items-center.justify-content-center.text-center.height-80
            .col-12
                h1.display-3 Sign Up 

                form(action="/users/signUp", method="post") 
                    .form-group.d-flex.align-items-center.justify-content-center.text-center
                        input.w-50(type="text", class="form-control", name="username", placeholder="Enter Username")

                    .form-group.d-flex.align-items-center.justify-content-center.text-center
                        input.w-50(type="text", class="form-control", name="email", placeholder="Enter Email")

                    .form-group.d-flex.align-items-center.justify-content-center.text-center 
                        input.w-50(type="password", class="form-control", name="password", placeholder="Enter Password")

                    .form-group.d-flex.align-items-center.justify-content-center.text-center
                        select.form-select.select-styling.text-center(aria-label="Default select example", name="gender")
                            option(selected disabled) Select Gender
                            option(value="Male") Male
                            option(value="Female") Female

                    button.btn-hero(type="submit") Sign Up