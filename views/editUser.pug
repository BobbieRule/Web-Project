extends ./layout

block navbar 
    include ./partials/navbar

block content
    if error
        .alert.alert-danger(role="alert")
            span=error

    .container 
        .row.d-flex.align-items-center.justify-content-center.text-center.height-80
            .col-12
                h1.display-3 Edit Info

                form(action="/users/edituser/"+user._id, method="post") 
                    .form-group.d-flex.align-items-center.justify-content-center.text-center
                        input.w-50(type="text", class="form-control", name="username", placeholder="Enter New Username", value=user.username)

                    .form-group.d-flex.align-items-center.justify-content-center.text-center
                        select.form-select.select-styling.text-center(aria-label="Default select example", name="gender", value=user.gender)
                            option(disabled) Select Gender
                            option(value="Male") Male
                            option(value="Female") Female

                    button.btn-hero(type="submit") Edit Info
                    a.btn-hero.m-1(href="/users/account") Cancel